{
    "manifest_version": 2,
    "name": "HoldOn",
    "version": "1.0",
    "description": "Pause all YouTube videos in all tabs.",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "128": "icon.png",
      "256": "icon.png"
    }
  }
  